<h1>Pages#serch</h1>
<p>Find me in app/views/pages/serch.html.erb</p>
<%= form_with(url: pages_search_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "キーワード検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<% if @books == [] %>
<h2 class = "seach-result">検索結果はありません</h2>
<% else %>
<div class = "post-contents">
  <ul class = "post-list">
    <% @books.each do |book| %>
    <li class = "list">
      <%= link_to book_path(book.id) do %>
      <h3 class='post-title'><%= book.title %></h3>
      <h3 class='post-content'><%= book.content %></h3>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>