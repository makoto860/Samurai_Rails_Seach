<h3><%= form_with(url: search_books_path, local: true, method: :get, class: "search-form") do |form| %></h3>
  <%= form.text_field :keyword, placeholder: "タイトル、コンテントで検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<% if @books == [] %>
  <h2 class = "seach-result">検索結果はありません</h2>
<% else %>
  <div class = "post-contents">
    <ul class = "post-list">
      <% @books.each do |book| %>
        <li class = "list">
          <%= link_to book_path(book.id) do %>
            <h3 class='post-title'><%= book.title %></h3>
            <h3 class='post-title'><%= book.content %></h3>
            <p class = "root-show">〜クリックして詳細を見る〜</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>